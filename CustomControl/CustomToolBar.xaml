<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:MAUI_Custom_Tabs.CustomControls"
             x:Class="MAUI_Custom_Tabs.CustomControls.CustomToolBar"
             x:Name="this">
    <Grid>
        <Grid BackgroundColor="{StaticResource DarkNavyBlue}">
            <Label
                Text="{Binding Title, Source={x:Reference this}}"
                Margin="0,0,0,10"
                HorizontalTextAlignment="Center"
                FontFamily="poppins500"
                FontSize="20"
                VerticalOptions="Center"
                TextColor="{StaticResource White}"/>
        </Grid>
    </Grid>
</ContentView>
